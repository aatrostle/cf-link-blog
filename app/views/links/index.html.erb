<h1>Listing links</h1>

<table class="table table-bordered table-hover">
  <tr>
    <th>Url</th>
    <th>Title</th>
    <th>Tags</th>
    <th>Created on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.reverse.each do |link| %>
  <tr>
    <td><%= link.url %></td>
    <td><%= link.title %></td>
    <td><%= link.tags %></td>
    <td><%= link.created_on %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path, :class => "btn" %>
